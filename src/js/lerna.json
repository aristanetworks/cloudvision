{
  "lerna": "3.15.0",
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "allowBranch": "master",
      "verifyAccess": false,
      "ignoreChanges": [
        "**/.babelrc",
        "**/.eslintrc",
        "**/.flowconfig",
        "**/.gitignore",
        "**/*.md",
        "**/test/**",
        "**/flow-typed/**"
      ]
    }
  }
}

