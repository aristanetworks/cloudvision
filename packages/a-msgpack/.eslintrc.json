{
  "overrides": [
    {
      "files": ["**/*.js"],
      "extends": ["arista-js"]
    },
    {
      "files": ["**/*.ts"],
      "extends": ["arista-ts"],
      "parserOptions": {
        "project": "./tsconfig.json"
      },
      "rules": {
        "no-plusplus": "off",
        "no-bitwise": "off"
      }
    }
  ]
}
